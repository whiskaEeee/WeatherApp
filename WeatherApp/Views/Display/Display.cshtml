@model IPagedList<WeatherData>

<link rel="stylesheet" href="~/css/Display/weather-display.css" asp-append-version="true" />

<form id="filterForm" method="get" asp-controller="Display" asp-action="Filter" class="row g-3 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="dropdown">
                    <label class="mb-2">Месяц:</label>
                    <button id="monthButton" class="form-select dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Не выбрано
                    </button>
                    <ul class="dropdown-menu" style="max-height: 200px; overflow-y: auto;">
                        <li>
                            <a class="dropdown-item" onclick="selectMonth('Не выбрано')">Не выбрано</a>
                        </li>
                        @foreach (var month in ViewBag.Months)
                        {
                            <li>
                                <a class="dropdown-item" onclick="selectMonth('@month')">@month</a>
                            </li>
                        }
                    </ul>
                    <input type="hidden" name="month" id="selectedMonth" value="Не выбрано">
                </div>
            </div>
            <div class="col-4">
                <div class="dropdown">
                    <label class="mb-2">Год:</label>
                    <button id="yearButton" class="form-select dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Не выбрано
                    </button>
                    <ul class="dropdown-menu" style="max-height: 200px; overflow-y: auto;">
                        <li>
                            <a class="dropdown-item" onclick="selectYear('Не выбрано')">Не выбрано</a>
                        </li>
                        @foreach (var year in ViewBag.Years)
                        {
                            <li>
                                <a class="dropdown-item" onclick="selectYear('@year')">@year</a>
                            </li>
                        }
                    </ul>
                    <input type="hidden" name="year" id="selectedYear" value="Не выбрано">
                </div>
            </div>
            <div class="col-4 align-self-end d-flex justify-content-end">
                <button type="submit" class="btn btn-primary w-75 bg-purple">Фильтровать</button>
            </div>
        </div>
    </div>
</form>

<div id="weatherReportsContainer">
    <partial name="_WeatherDataPartial" model="Model" />
</div>


@section Scripts {
    <script src="~/js/Display/partial-render.js"></script>
    <script src="~/js/Display/select-logic.js"></script>
}

